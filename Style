/* Global reset for enhancer area */
#enhancer-bg{
  position:fixed;
  inset:0;
  z-index:0;
  pointer-events:none;
  background:
    radial-gradient(40rem 30rem at 8% 12%, rgba(74,144,226,0.12), transparent 14%),
    radial-gradient(30rem 24rem at 92% 82%, rgba(107,211,255,0.06), transparent 20%),
    linear-gradient(180deg, var(--bg-900) 0%, var(--bg-800) 100%);
  overflow:hidden;
  -webkit-backdrop-filter: blur(6px) saturate(120%);
  backdrop-filter: blur(6px) saturate(120%);
}

/* subtle animated hue shift layers */
#enhancer-bg::before{
  content:"";
  position:absolute; inset:-18%;
  background: linear-gradient(45deg, rgba(74,144,226,0.06), rgba(107,211,255,0.04), rgba(58,123,213,0.04));
  filter: blur(36px) contrast(1.02);
  transform: translate3d(0,0,0);
  animation: enhancerShift 26s linear infinite;
  opacity:0.98;
}
@keyframes enhancerShift {
  0% { transform: translate(-4%, -3%) scale(1.02); }
  50% { transform: translate(4%, 3%) scale(1); }
  100% { transform: translate(-4%, -3%) scale(1.02); }
}

/* micro grain overlay for texture */
#enhancer-bg::after{
  content:"";
  position:absolute; inset:0;
  background-image: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='8' height='8'><rect width='8' height='8' fill='rgba(255,255,255,0.01)'/></svg>");
  opacity:0.03;
  mix-blend-mode: overlay;
  pointer-events:none;
}

/* particles canvas (created by JS) */
#enhancer-canvas { position:absolute; inset:0; width:100%; height:100%; pointer-events:none; opacity:0.82; }

